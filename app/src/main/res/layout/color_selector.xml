<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/color_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/black"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:thumbColor="@android:color/holo_red_dark"
        app:trackColor="@android:color/holo_red_dark"
        android:valueFrom="0.0"
        android:valueTo="255.0"
        app:labelBehavior="gone" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:thumbColor="@android:color/holo_green_dark"
        app:trackColor="@android:color/holo_green_dark"
        android:valueFrom="0.0"
        android:valueTo="255.0"
        app:labelBehavior="gone" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:thumbColor="@android:color/holo_blue_dark"
        app:trackColor="@android:color/holo_blue_dark"
        android:valueFrom="0.0"
        android:valueTo="255.0"
        app:labelBehavior="gone" />
</LinearLayout>